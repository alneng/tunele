{
  "name": "tunele",
  "version": "1.3.1",
  "description": "An open-source clone of the music game Heardle",
  "private": true,
  "workspaces": [
    "src/backend",
    "src/frontend"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace backend dev\" \"yarn workspace frontend dev\"",
    "dev:stop": "yarn workspace backend dev:stop",
    "backend": "yarn workspace backend dev",
    "backend:preview": "yarn workspace backend preview",
    "frontend": "yarn workspace frontend dev",
    "frontend:build": "yarn workspace frontend build",
    "frontend:preview": "yarn workspace frontend preview",
    "test": "yarn workspace backend test",
    "test:watch": "yarn workspace backend test:watch",
    "lint": "yarn workspace backend lint && yarn workspace frontend lint",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": "prettier --write"
  },
  "keywords": [
    "Heardle",
    "clone",
    "game",
    "music"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "20.x || 22.x"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  }
}
