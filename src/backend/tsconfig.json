{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["tests/*"]
    },
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "sourceMap": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // Project structure (rootDir allows both src/ and tests/ for path resolution)
    "rootDir": ".",
    "outDir": "dist",

    // Linting
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./src/**/*.ts", "./tests/**/*.ts", "./@types/**/*.d.ts"],
  "exclude": ["**/node_modules/*", "dist", "../frontend"]
}
