{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["**/node_modules/*", "dist", "../client"],
  "include": ["./src/**/*.ts"]
}